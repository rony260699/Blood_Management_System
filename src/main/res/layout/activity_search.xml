                android:padding="10dp"
                android:textColorHint="@color/cardview_dark_background" />
-->
            <EditText
                android:id="@+id/patient_blood_grp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_editext"
                android:drawableLeft="@drawable/ic_baseline_group"
                android:hint="blood group"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@color/cardview_dark_background" />


            <EditText
                android:id="@+id/patient_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_editext"
                android:drawableLeft="@drawable/ic_baseline_add_location_24"
                android:hint="address"
                android:inputType="textPostalAddress"
                android:padding="10dp"
                android:textColorHint="@color/cardview_dark_background" />



            <EditText
                android:id="@+id/quantity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_editext"
                android:drawableLeft="@drawable/ic_baseline_shopping_bag_24"
                android:hint="quantity"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@color/cardview_dark_background" />
